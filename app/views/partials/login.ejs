<div layout="row">
    <side-menu></side-menu>
    <section layout="column" flex="60">
        <h1 class="md-display-3">Login</h1>
        <md-content>
            <form name="LoginForm" ng-submit="LoginForm.$valid && LoginCtrl.login(LoginForm)">

                <!-- Username -->

                <md-input-container>
                    <label for="username">Username</label>
                    <input required type="text" name="username" id="username" ng-model="LoginCtrl.username" />       
                    <div ng-messages="LoginForm.username.$error">
                        <div ng-message="required">This field is required.</div>                     
                    </div>
                </md-input-container>

                <!-- Password -->
                <md-input-container>
                    <label>Password</label>
                    <input required type="password" name="password" ng-model="LoginCtrl.password" />
                    <div ng-messages="LoginForm.password.$error">
                        <div ng-message="required">This field is required.</div>                     
                    </div>
                </md-input-container>
                <div>{{ LoginCtrl.error }}</div>
                <!-- Login Button -->
                <md-content>
                    <md-button class="md-raised" type="submit" ng-disabled="LoginForm.$invalid">Login</md-button>
                </md-content>
            </form>
        </md-content>
    </section>
</div>
