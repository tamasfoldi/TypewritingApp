<div layout="row">
    <side-menu></side-menu>
    <section layout="column" flex="60">
        <h1 class="md-display-3">Register</h1>
        <md-content>
            <form name="RegForm" ng-submit="RegForm.$valid && RegCtrl.register(); RegForm.$setPristine()">

                <!-- Username -->

                <md-input-container>
                    <label for="username">Username</label>
                    <input required type="text" name="username" id="username" ng-model="RegCtrl.username" ng-minlength="4" ng-maxlength="15" pattern="[A-za-z0-9]*"/>
                    <div ng-messages="RegForm.username.$error" ng-show="RegForm.username.$invalid || !RegForm.username.$pristine">
                        <div ng-message="required">This field is required.</div>
                        <div ng-message="pattern">The name can contain only letters from the english alphabet and numbers.</div>
                        <div ng-message="minlength">The name has to be at least 4 characters loangular.</div>
                        <div ng-message="maxlength">The name has to be less then 15 characters loangular.</div>                      
                    </div>
                    <div ng-messages="RegCtrl.errors" ng-hide="RegForm.username.$invalid || !RegForm.username.$pristine" >
                      <div ng-message="username">{{ RegCtrl.errors.username }}</div>                      
                    </div>
                </md-input-container>

                <!-- E-mail address -->
                <md-input-container>
                    <label>E-mail Address</label>
                    <input required type="email" name="email" ng-model="RegCtrl.email"
                           ng-minlength="10" ng-maxlength="100" ng-pattern="/^.+@.+\..+$/" />
                    <div ng-messages="RegForm.email.$error" role="alert" ng-show="RegForm.email.$invalid || !RegForm.email.$pristine">
                        <div ng-message-exp="['required', 'minlength', 'maxlength', 'pattern']">
                            Your email must be between 10 and 100 characters long and look like an e-mail address.
                        </div>
                    </div>
                    <div ng-messages="RegCtrl.errors" ng-hide="RegForm.email.$invalid || !RegForm.email.$pristine">
                      <div ng-message="email">{{ RegCtrl.errors.email }}</div>                      
                    </div>
                </md-input-container>

                <!-- Password -->
                <md-input-container>
                    <label>Password</label>
                    <input required type="password" name="password" ng-model="RegCtrl.password"
                           minlength="8" ng-maxlength="16" pattern="[A-za-z0-9]*" />
                    <div ng-messages="RegForm.password.$error" ng-show="RegForm.password.$invalid || !RegForm.password.$pristine">
                        <div ng-message="required">This field is required.</div>
                        <div ng-message="pattern">The password can contain only letters from the english alphabet and numbers.</div>
                        <div ng-message="minlength">The password has to be at least 8 characters loangular.</div>
                        <div ng-message="maxlength">The password has to be less then 16 characters loangular.</div>                        
                    </div>
                    <div ng-messages="RegCtrl.errors" ng-hide="RegForm.password.$invalid || !RegForm.password.$pristine">
                      <div ng-message="password">{{ RegCtrl.errors.password }}</div>                      
                    </div>
                </md-input-container>

                <!-- Register Button -->
                <md-content>
                    <md-button class="md-raised" type="submit">Register</md-button>
                </md-content>
            </form>
        </md-content>
    </section>
</div>
